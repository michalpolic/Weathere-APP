<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/icon_weather_id"
        android:src="@drawable/ic_launcher"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp">

        <TextView
            android:id="@+id/description_weather_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_weather_text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/forecast_title" />

        <TextView
            android:id="@+id/temperature_wheather_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_degree"
            android:textColor="@color/forecast_temperature"
            android:textSize="15dp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>